{
  "name": "javascript-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Clem",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "^2.0.5"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "ignorePatterns": [
      "node_modules/"
    ]
  },
  "prettier": {
    "semi": false,
    "trailingComma": "all",
    "singleQuote": false,
    "printWidth": 120,
    "tabWidth": 2
  },
  "scripts": {
    "start": "node index.js",
    "lint": "eslint --ext js . --fix"
  },
  "type": "module"
}
